<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <connectionStrings>
        <add name="AzureSqlConnection" 
             connectionString="Server=tcp:[your-server-name].database.windows.net,1433;Initial Catalog=motion;Persist Security Info=False;User ID=[your-username];Password=[your-password];MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;" />
    </connectionStrings>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8" />
    </startup>
</configuration>